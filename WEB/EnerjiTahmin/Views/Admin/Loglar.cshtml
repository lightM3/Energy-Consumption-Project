@model List<EnerjiTahmin.Models.IslemLog>
@{ ViewData["Title"] = "Sistem Logları"; Layout = "~/Views/Shared/_AdminLayout.cshtml"; }

<div class="container py-4">
    <h3><i class="bi bi-list-check me-2"></i>Sistem Logları (Son 100)</h3>
    
    <div class="card shadow-sm border-0 mt-3 rounded-4 overflow-hidden">
        <div class="card-body p-0">
            <table class="table table-striped mb-0 table-sm">
                <thead class="table-dark">
                    <tr>
                        <th class="ps-3 py-2">Tarih</th>
                        <th>Kullanıcı</th>
                        <th>İşlem</th>
                        <th>Detay</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var log in Model)
                    {
                        <tr>
                            <td class="ps-3">@log.Tarih.ToString("dd.MM.yyyy HH:mm")</td>
                            <td>@log.KullaniciEmail</td>
                            <td><span class="badge bg-secondary">@log.IslemTuru</span></td>
                            <td class="font-monospace small">@log.Aciklama</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>