@model List<EnerjiTahmin.Models.TuketimVerisi>
@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container py-4">
    <h2 class="fw-bold mb-4 text-dark"><i class="bi bi-speedometer2 me-2"></i>Yönetim Paneli</h2>

    <div class="row g-4 mb-5">
        <div class="col-md-4">
            <div class="card border-0 shadow-sm bg-primary text-white h-100">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-uppercase opacity-75">Toplam Kullanıcı</h6>
                        <h1 class="display-4 fw-bold mb-0">@ViewBag.KullaniciSayisi</h1>
                    </div>
                    <i class="bi bi-people-fill display-1 opacity-25"></i>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card border-0 shadow-sm bg-success text-white h-100">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-uppercase opacity-75">Sistem Logları</h6>
                        <h1 class="display-4 fw-bold mb-0">@ViewBag.LogSayisi</h1>
                    </div>
                    <i class="bi bi-activity display-1 opacity-25"></i>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card border-0 shadow-sm bg-dark text-white h-100">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-uppercase opacity-75">Sistem Durumu</h6>
                        <h3 class="fw-bold mb-0 text-success">Aktif</h3>
                        <small class="opacity-75">Python API Bağlı</small>
                    </div>
                    <i class="bi bi-cpu-fill display-1 opacity-25"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-sm p-4">
        <h5 class="fw-bold text-secondary mb-4">Enerji Tüketim Trendi (Son Veriler)</h5>
        <canvas id="tuketimChart" height="100"></canvas>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
    // Modelden gelen verileri JavaScript dizisine çevir
    var tarihler = @Html.Raw(Json.Serialize(Model.Select(x => x.Tarih.ToString("dd.MM"))));
    var tuketimler = @Html.Raw(Json.Serialize(Model.Select(x => x.TuketimMiktari)));

    const ctx = document.getElementById('tuketimChart');

    new Chart(ctx, {
        type: 'line',
        data: {
            labels: tarihler,
            datasets: [{
                label: 'Enerji Tüketimi (kWh)',
                data: tuketimler,
                borderColor: '#0f766e', // Senin tema rengin (Yeşilimsi)
                backgroundColor: 'rgba(15, 118, 110, 0.1)',
                borderWidth: 3,
                fill: true,
                tension: 0.4 // Çizgiyi yumuşatır (kavisli yapar)
            }]
        },
        options: {
            responsive: true,
            plugins: {
                legend: { position: 'top' }
            },
            scales: {
                y: { beginAtZero: false }
            }
        }
    });
</script>