@{
    Layout = null;
    ViewData["Title"] = "Kayıt Ol";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Kayıt Ol - EnergySys AI</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600&display=swap" rel="stylesheet">

    <style>
        body { font-family: 'Inter', sans-serif; height: 100vh; overflow: hidden; }
        .login-container { height: 100vh; }
        
        .bg-image-section {
            background-image: url('https://images.unsplash.com/photo-1473341304170-971dccb5ac1e?q=80&w=2070&auto=format&fit=crop');
            background-size: cover; background-position: center; position: relative;
        }
        .bg-overlay {
            position: absolute; top: 0; left: 0; right: 0; bottom: 0;
            background: linear-gradient(135deg, rgba(5, 150, 105, 0.85), rgba(15, 23, 42, 0.95));
            display: flex; flex-direction: column; justify-content: center; padding: 4rem; color: white;
        }

        .form-control { padding: 12px; border-radius: 8px; background-color: #f8f9fa; border: 1px solid #e9ecef; }
        .form-control:focus { background-color: #fff; box-shadow: 0 0 0 4px rgba(16, 185, 129, 0.15); border-color: #10b981; }
        
        .btn-energy { background-color: #0f766e; color: white; padding: 12px; border-radius: 8px; font-weight: 600; border: none; transition: background-color 0.2s; }
        .btn-energy:hover { background-color: #0d9488; color: white; }
    </style>
</head>
<body>

    <div class="container-fluid g-0 login-container">
        <div class="row g-0 h-100">
            
            <div class="col-lg-6 d-none d-lg-block bg-image-section">
                <div class="bg-overlay">
                    <div class="mb-4">
                        <i class="bi bi-person-plus-fill fs-1 text-white"></i>
                    </div>
                    <h1 class="display-4 fw-bold mb-3">Aramıza Katıl.</h1>
                    <p class="lead opacity-75">
                        Enerji tüketim analizlerine hemen başla. Kendi verilerini yönet, 
                        yapay zeka tahminlerini raporla.
                    </p>
                </div>
            </div>

            <div class="col-lg-6 d-flex align-items-center justify-content-center bg-white">
                <div class="w-100 p-5" style="max-width: 500px;">
                    
                    <div class="text-center mb-4">
                        <h3 class="fw-bold text-dark">Hesap Oluştur</h3>
                        <p class="text-secondary small">Formu doldurarak sisteme kayıt olabilirsiniz.</p>
                    </div>

                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger text-center small p-2">
                            <i class="bi bi-x-circle me-1"></i> @ViewBag.Error
                        </div>
                    }

                    <form action="/Account/Register" method="post">
                        
                        <div class="mb-3">
                            <label class="form-label text-secondary small fw-bold">Ad Soyad</label>
                            <input type="text" class="form-control" name="AdSoyad" placeholder="Örn: Ahmet Yılmaz" required>
                        </div>

                        <div class="mb-3">
                            <label class="form-label text-secondary small fw-bold">E-posta Adresi</label>
                            <input type="email" class="form-control" name="Email" placeholder="ornek@enerji.com" required>
                        </div>

                        <div class="mb-4">
                            <label class="form-label text-secondary small fw-bold">Şifre Belirle</label>
                            <input type="password" class="form-control" name="Sifre" placeholder="••••••••" required>
                        </div>

                        <button type="submit" class="btn btn-energy w-100 shadow-sm">
                            <i class="bi bi-check-lg me-2"></i> Kaydı Tamamla
                        </button>
                    </form>

                    <div class="text-center mt-4">
                        <p class="small text-secondary">
                            Zaten hesabınız var mı? 
                            <a href="/Account/Login" class="text-success fw-bold text-decoration-none">Giriş Yap</a>
                        </p>
                    </div>

                </div>
            </div>
        </div>
    </div>
</body>
</html>