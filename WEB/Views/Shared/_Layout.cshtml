@Html.Partial("_FooterLayout")

    <div id="chat-widget" class="chat-animate" style="position: fixed; bottom: 100px; right: 25px; width: 360px; display: none; z-index: 9999;">
        <div class="chat-header d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center">
                <div class="bg-white text-success rounded-circle d-flex justify-content-center align-items-center me-2 shadow-sm" style="width: 40px; height: 40px;">
                    <i class="bi bi-robot fs-5" style="color: #0f766e;"></i>
                </div>
                <div class="lh-1">
                    <h6 class="mb-0 fw-bold">Kumru Asistan</h6>
                    <small class="text-white-50" style="font-size: 0.75rem;">‚óè √áevrimi√ßi</small>
                </div>
            </div>
            <button type="button" class="btn btn-sm text-white opacity-75 hover-opacity-100" onclick="toggleChat()">
                <i class="bi bi-dash-lg fs-5"></i>
            </button>
        </div>

        <div id="chat-body" style="height: 400px; overflow-y: auto;">
            <div class="d-flex flex-column align-items-center justify-content-center text-center mt-4 mb-3">
                <span class="badge bg-light text-secondary border mb-2 px-3 py-2 rounded-pill fw-normal">Bug√ºn</span>
            </div>
            
            <div class="d-flex flex-column align-items-start mb-3 animate-fade">
                <div class="message-bubble bot-message">
                    Merhaba Metin Bey! üëã<br>
                    Ben Kumru. Size nasƒ±l yardƒ±mcƒ± olabilirim?
                </div>
                <small class="text-muted ms-1 mt-1" style="font-size: 0.7rem;">Simdi</small>
            </div>
        </div>

        <div class="chat-footer">
            <div class="chat-input-group">
                <input type="text" id="user-input" class="form-control chat-input" placeholder="Mesajƒ±nƒ±zƒ± yazƒ±n..." onkeypress="handleEnter(event)">
                <button class="btn btn-link text-decoration-none p-0 ms-2" onclick="sendMessage()">
                    <i class="bi bi-send-fill fs-5" style="color: #0f766e;"></i>
                </button>
            </div>
        </div>
    </div>

    <button id="chat-toggle-btn" onclick="toggleChat()" class="chat-toggle-btn pulse-animation btn rounded-circle d-flex align-items-center justify-content-center" 
            style="position: fixed; bottom: 25px; right: 25px; z-index: 9998; width: 65px; height: 65px; border: none; color: white;">
        <i class="bi bi-chat-text-fill fs-3"></i>
    </button>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        function toggleChat() {
            var chatWidget = document.getElementById('chat-widget');
            var toggleBtn = document.getElementById('chat-toggle-btn');
            
            if (chatWidget.style.display === 'none') {
                chatWidget.style.display = 'block';
                // Chat a√ßƒ±lƒ±nca butondaki nabƒ±z efektini durdur (dikkat daƒüƒ±tmasƒ±n)
                toggleBtn.classList.remove('pulse-animation');
                toggleBtn.innerHTML = '<i class="bi bi-chevron-down fs-4"></i>'; 
                setTimeout(function() { document.getElementById('user-input').focus(); }, 100);
            } else {
                chatWidget.style.display = 'none';
                // Kapanƒ±nca tekrar ekle
                toggleBtn.classList.add('pulse-animation');
                toggleBtn.innerHTML = '<i class="bi bi-chat-text-fill fs-3"></i>';
            }
        }

        function handleEnter(e) {
            if (e.key === 'Enter') sendMessage();
        }

        function sendMessage() {
            var input = document.getElementById('user-input');
            var message = input.value.trim();
            if (!message) return;

            var chatBody = document.getElementById('chat-body');
            
            // 1. Kullanƒ±cƒ± mesajƒ±
            var userMsgHtml = `
                <div class="d-flex flex-column align-items-end mb-3">
                    <div class="message-bubble user-message">
                        ${message}
                    </div>
                </div>`;
            chatBody.insertAdjacentHTML('beforeend', userMsgHtml);
            
            input.value = '';
            chatBody.scrollTop = chatBody.scrollHeight;

            // 2. Y√ºkleniyor
            var loadingId = 'loading-' + Date.now();
            var loadingHtml = `
                <div id="${loadingId}" class="d-flex flex-column align-items-start mb-3">
                    <div class="message-bubble bot-message text-secondary fst-italic">
                        <span class="spinner-grow spinner-grow-sm me-1" role="status" aria-hidden="true" style="width: 0.8rem; height: 0.8rem;"></span>
                        Yazƒ±yor...
                    </div>
                </div>`;
            chatBody.insertAdjacentHTML('beforeend', loadingHtml);
            chatBody.scrollTop = chatBody.scrollHeight;

            // 3. Backend ƒ∞steƒüi
            $.post('/Chat/GetResponse', { userMessage: message }, function (response) {
                var loadingEl = document.getElementById(loadingId);
                if(loadingEl) loadingEl.remove();
                
                if (response.success) {
                    var formattedReply = response.reply
                        .replace(/\*\*(.*?)\*\*/g, '<b>$1</b>')
                        .replace(/\n/g, '<br>');

                    var botMsgHtml = `
                        <div class="d-flex flex-column align-items-start mb-3">
                            <div class="message-bubble bot-message">
                                ${formattedReply}
                            </div>
                        </div>`;
                    chatBody.insertAdjacentHTML('beforeend', botMsgHtml);
                } else {
                    var errorHtml = `
                        <div class="text-center text-danger small my-2">
                            <i class="bi bi-exclamation-circle"></i> ${response.message}
                        </div>`;
                    chatBody.insertAdjacentHTML('beforeend', errorHtml);
                }
                chatBody.scrollTop = chatBody.scrollHeight;
            }).fail(function() {
                var loadingEl = document.getElementById(loadingId);
                if(loadingEl) loadingEl.remove();

                var errorHtml = `
                    <div class="text-center text-danger small my-2">
                        <i class="bi bi-wifi-off"></i> Baƒülantƒ± hatasƒ±.
                    </div>`;
                chatBody.insertAdjacentHTML('beforeend', errorHtml);
            });
        }
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>