@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EnergySys AI</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>

    <nav class="navbar navbar-expand-lg sticky-top py-3 shadow-sm bg-white">
        <div class="container">
            <a class="navbar-brand fw-bold d-flex align-items-center" href="/Home/Index" style="color: #0f766e;">
                <i class="bi bi-lightning-charge-fill me-2 fs-4"></i>
                Energy<span class="text-dark">Sys</span>
            </a>
            
            <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto align-items-center">
                    <li class="nav-item"><a class="nav-link px-3" href="/Home/Index">Ana Sayfa</a></li>
                    <li class="nav-item"><a class="nav-link px-3" href="/Tahmin/Index">Tahmin Sistemi</a></li>
                    <li class="nav-item"><a class="nav-link px-3" href="/Hakkında/Index">Hakkımızda</a></li>
                    <li class="nav-item"><a class="nav-link px-3" href="/Iletisim/Index">İletişim</a></li>
                    <li class="nav-item"><a class="nav-link px-3" href="/Bilgi/Index">Enerji Rehberi</a></li>

                    @if (Context.Session.GetString("UserRole") == "Admin")
                    {
                        <li class="nav-item dropdown ms-lg-3">
                            <a class="nav-link dropdown-toggle fw-bold text-danger" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="bi bi-shield-lock-fill me-1"></i> YÖNETİM
                            </a>
                            <ul class="dropdown-menu border-0 shadow">
                                <li><a class="dropdown-item" href="/Admin/Index"><i class="bi bi-speedometer2 me-2"></i>Dashboard</a></li>
                                <li><a class="dropdown-item" href="/Admin/Kullanicilar"><i class="bi bi-people me-2"></i>Kullanıcılar</a></li>
                                <li><a class="dropdown-item" href="/Admin/Loglar"><i class="bi bi-file-text me-2"></i>Sistem Logları</a></li>
                            </ul>
                        </li>
                    }
                    @if (Context.Session.GetString("UserEmail") != null)
                    {
                        <li class="nav-item ms-lg-3 dropdown">
                            <a class="nav-link dropdown-toggle fw-bold text-dark" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="bi bi-person-circle me-1"></i> @Context.Session.GetString("UserName")
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end border-0 shadow">
                                <li><a class="dropdown-item" href="/Account/Profile">Profilim</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item text-danger" href="/Account/Logout">Çıkış Yap</a></li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item ms-lg-3">
                            <a href="/Account/Login" class="btn btn-primary rounded-pill px-4 shadow-sm">Giriş Yap</a>
                        </li>
                    }
                    
                </ul>
            </div>
        </div>
    </nav>

    <main role="main">
        @RenderBody()
    </main>

    <footer class="mt-5 py-4 bg-light border-top">
        <div class="container text-center">
            <div class="mb-3">
                <i class="bi bi-lightning-charge text-success fs-3"></i>
            </div>
            <p class="text-muted mb-1 fw-bold">Manisa Celal Bayar Üniversitesi - Yazılım Mühendisliği</p>
            <p class="text-secondary small">&copy; 2025 EnergySys AI Projesi. Tüm hakları saklıdır.</p>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>