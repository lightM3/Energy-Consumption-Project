@model List<EnerjiTahmin.Models.UserDetailView>
@{
    ViewData["Title"] = "Kullanıcı Yönetimi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="fw-bold text-dark"><i class="bi bi-people-fill me-2"></i>Kullanıcı Listesi</h3>
        <span class="badge bg-primary fs-6">Toplam: @Model.Count</span>
    </div>

    <div class="card shadow-sm border-0 rounded-4 overflow-hidden">
        <div class="card-body p-0">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4 py-3">ID</th>
                        <th>Ad Soyad</th>
                        <th>E-Posta</th>
                        <th>Rol</th>
                        <th>Şifre (Hash)</th>
                        <th class="text-end pe-4">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count == 0)
                    {
                        <tr>
                            <td colspan="6" class="text-center py-5 text-muted">
                                <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                                Henüz kayıtlı kullanıcı yok.
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td class="ps-4 fw-bold text-secondary">#@user.UserID</td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-2" style="width: 35px; height: 35px;">
                                            @user.MaskedName.Substring(0, 1).ToUpper()
                                        </div>
                                        @user.MaskedName
                                    </div>
                                </td>
                                <td>@user.MaskedEmail</td>
                                <td>
                                    @if (user.RoleName == "Admin")
                                    {
                                        <span class="badge bg-danger">@user.RoleName</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-info text-dark">@user.RoleName</span>
                                    }
                                </td>
                                <td class="text-muted small">
                                    <span class="d-inline-block text-truncate" style="max-width: 100px;">
                                        @user.MaskedPassword
                                    </span>
                                </td>
                                <td class="text-end pe-4">
                                    <a href="/Admin/KullaniciSil/@user.UserID" 
                                       onclick="return confirm('Bu kullanıcıyı silmek istediğinize emin misiniz?');" 
                                       class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-trash"></i> Sil
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>