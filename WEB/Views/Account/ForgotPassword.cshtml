@{
    Layout = null;
    ViewData["Title"] = "Şifre Sıfırla";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Şifre Sıfırla - EnergySys</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600&display=swap" rel="stylesheet">

    <style>
        body { font-family: 'Inter', sans-serif; background-color: #f8fafc; height: 100vh; display: flex; align-items: center; justify-content: center; }
        .card { border: none; border-radius: 16px; box-shadow: 0 10px 25px rgba(0,0,0,0.05); overflow: hidden; }
        .btn-energy { background-color: #0f766e; color: white; border: none; font-weight: 600; padding: 12px; border-radius: 8px; transition: 0.2s; }
        .btn-energy:hover { background-color: #0d9488; color: white; }
        .form-control:focus { box-shadow: 0 0 0 4px rgba(16, 185, 129, 0.15); border-color: #10b981; }
    </style>
</head>
<body>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-5 col-lg-4">
                
                <div class="card p-4">
                    <div class="text-center mb-4">
                        <div class="bg-success bg-opacity-10 d-inline-block p-3 rounded-circle mb-3">
                            <i class="bi bi-shield-lock-fill fs-2 text-success"></i>
                        </div>
                        <h4 class="fw-bold">Şifreni mi Unuttun?</h4>
                        <p class="text-muted small">Sorun değil. E-posta adresini gir, şifreni hemen yenileyelim.</p>
                    </div>

                    @if (ViewBag.Success != null)
                    {
                        <div class="alert alert-success text-center small">@ViewBag.Success</div>
                        <div class="text-center">
                            <a href="/Account/Login" class="btn btn-outline-success w-100">Giriş Yap</a>
                        </div>
                    }
                    else
                    {
                        if (ViewBag.Error != null)
                        {
                            <div class="alert alert-danger text-center small">@ViewBag.Error</div>
                        }

                      <form action="/Account/ForgotPassword" method="post">
    <div class="mb-4">
        <label class="form-label text-secondary small fw-bold">E-posta Adresi</label>
        <input type="email" class="form-control" name="email" placeholder="ornek@enerji.com" required>
        <div class="form-text text-muted small mt-2">
            <i class="bi bi-info-circle me-1"></i> Yeni şifreniz bu adrese gönderilecektir.
        </div>
    </div>

    <button type="submit" class="btn btn-energy w-100">
        <i class="bi bi-send-fill me-2"></i> Şifremi Sıfırla ve Gönder
    </button>
</form>
                    }

                    <div class="text-center mt-4">
                        <a href="/Account/Login" class="text-secondary small text-decoration-none">
                            <i class="bi bi-arrow-left me-1"></i> Giriş Ekranına Dön
                        </a>
                    </div>
                </div>

            </div>
        </div>
    </div>

</body>
</html>