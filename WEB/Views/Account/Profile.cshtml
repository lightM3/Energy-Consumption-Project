@model EnerjiTahmin.Models.Kullanici
@{
    ViewData["Title"] = "Profilim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            
            @if (ViewBag.Success != null)
            {
                <div class="alert alert-success border-0 shadow-sm rounded-3 mb-4">
                    <i class="bi bi-check-circle-fill me-2"></i> @ViewBag.Success
                </div>
            }

            <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
                <div class="card-header bg-primary text-white p-4">
                    <div class="d-flex align-items-center">
                        <div class="bg-white bg-opacity-25 rounded-circle p-3 me-3">
                            <i class="bi bi-person-lines-fill fs-3"></i>
                        </div>
                        <div>
                            <h4 class="mb-0 fw-bold">Profil Bilgileri</h4>
                            <p class="mb-0 opacity-75 small">Hesap ayarlarınızı buradan yönetebilirsiniz.</p>
                        </div>
                    </div>
                </div>

                <div class="card-body p-4">
                    <form asp-action="Profile" method="post">
                        
                        <div class="mb-3">
                            <label class="form-label text-muted fw-bold small">E-Posta Adresi</label>
                            <input type="text" class="form-control bg-light" value="@Model.Email" readonly disabled>
                            <small class="text-muted">Güvenlik gereği e-posta adresi değiştirilemez.</small>
                        </div>

                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <label class="form-label text-secondary fw-bold small">Ad Soyad</label>
                                <input asp-for="AdSoyad" type="text" class="form-control" required>
                            </div>
                            
                        
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary py-2 fw-bold shadow-sm rounded-pill">
                                <i class="bi bi-save me-2"></i> Değişiklikleri Kaydet
                            </button>
                        </div>
                    </form>

                    <hr class="my-5 opacity-25">

                    <div class="alert alert-danger bg-danger bg-opacity-10 border-danger border-opacity-25 rounded-3">
                        <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
                            <div>
                                <h6 class="text-danger fw-bold mb-1"><i class="bi bi-exclamation-triangle-fill me-2"></i>Hesabı Sil</h6>
                                <p class="text-danger small mb-0 opacity-75">Bu işlem geri alınamaz ve tüm verileriniz silinir.</p>
                            </div>
                            
                            <form asp-action="DeleteAccount" method="post" onsubmit="return confirm('Hesabınızı kalıcı olarak silmek istediğinize emin misiniz?');">
                                <button type="submit" class="btn btn-outline-danger btn-sm fw-bold">
                                    Hesabımı Sil
                                </button>
                            </form>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>